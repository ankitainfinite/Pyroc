<div class="modal fade" id="addFormModal" tabindex="-1" role="dialog" aria-labelledby="addFormModalTitle"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <input type="hidden" id="dirResults" value="<%= JSON.stringify(results) %> ">
            <form method="post" action="/directory/create" onsubmit="validateDuplicateDir()">
                <div class="modal-header">
                    <h5 class="modal-title" id="addFormModalTitle">Create Directory</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>Directory Name</label>
                        <input type="text" name="directoryName" id="directoryName" class="form-control" required />
                        <input type="hidden" name="parentId" value=<%= parentId %>>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <input type="submit" class="btn btn-primary" value="Save" />
                </div>
            </form>
        </div>
    </div>
</div>
<script src="../../javascripts/validations.js"></script>